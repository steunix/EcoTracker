<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.stefano.ecotracker.ReportActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sel"
        android:layout_alignParentStart="false"
        android:layout_alignEnd="@+id/gridLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/btnPrevious"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtCurrent"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/btnNext"
            android:layout_row="0"
            android:layout_column="2" />
    </LinearLayout>

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/gridLayout"
        android:focusableInTouchMode="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/sel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtSaldo"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignEnd="@+id/txtUscite"
            android:layout_column="1"
            android:layout_row="6"
            android:text="@string/none"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtUscite"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignEnd="@+id/txtEntrate"
            android:textAlignment="textEnd"
            android:textColor="#ff0000"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/entrate"
            android:id="@+id/textView"
            android:layout_above="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtEntrate"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true"
            android:textColor="#00ff00"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/none"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/uscite"
            android:id="@+id/textView2"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/saldo"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_marginRight="20dp" />

        <View
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </GridLayout>

    <View
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/gridLayout" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstRecords"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/record_list"
        android:id="@+id/textView14"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="false"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:background="#cccccc" />

</RelativeLayout>