<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:showDividers="middle"
        android:columnCount="4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtSaldo"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignEnd="@+id/txtUscite"
            android:layout_column="3"
            android:layout_row="5"
            android:text="@string/none"
            android:textAlignment="textEnd" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnYear"
            android:layout_row="1"
            android:layout_column="2"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtEntrate"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true"
            android:textColor="#00ff00"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/none"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtUscite"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignEnd="@+id/txtEntrate"
            android:textAlignment="textEnd"
            android:textColor="#ff0000"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/mese"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monthlyreport"
            android:id="@+id/textView13"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnMonth"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dropdown" />

        <Space
            android:layout_width="20px"
            android:layout_height="60px"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/entrate"
            android:id="@+id/textView"
            android:layout_above="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/uscite"
            android:id="@+id/textView2"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/saldo"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_row="5"
            android:layout_column="0" />
        <View
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </GridLayout>

</RelativeLayout>
