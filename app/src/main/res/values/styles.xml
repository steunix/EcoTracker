<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EcoTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/EcoActionBar</item>
        <!--
        <item name="android:actionBarTabStyle">@style/EcoActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/EcoActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        -->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/EcoActionBar</item>
        <!--
        <item name="actionBarTabStyle">@style/EcoActionBarTab</item>
        <item name="actionBarTabTextStyle">@style/EcoActionBarTabText</item>
        <item name="actionMenuTextColor">@color/actionbar_text</item>
        -->

    </style>

    <style name="tiny">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="expense" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#aa0000</item>
    </style>

    <style name="income" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#00aa00</item>
    </style>

    <style name="balance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ActionBar styles -->
    <style name="EcoActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/EcoActionBarTitleText</item>
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:backgroundSplit">@color/actionbar_color</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/EcoActionBarTitleText</item>
        <item name="background">@color/actionbar_color</item>
        <item name="backgroundSplit">@color/actionbar_color</item>
    </style>

    <!-- ActionBar title text -->
    <style name="EcoActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="EcoActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- ActionBar styles -->
    <style name="EcoActionBarTab"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <style name="h_divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <style name="icon_style">
        <item name="android:tint">#8e1413</item>
        <item name="android:alpha">0.6</item>
    </style>
</resources>
